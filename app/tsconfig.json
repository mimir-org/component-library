{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
    "module": "ES6",

    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "react-jsx",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "noEmit": true,

    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/global.d.ts", "src/theme.d.ts"],
  "exclude": ["dist", "node_modules", "__test__", "src/**/*.test.tsx", "src/**/*.test.ts", "frontend"]
}
